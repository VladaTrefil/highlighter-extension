{
  "name": "Playground",
  "version": "1.0",
  "description": "testing playground!",
  "manifest_version": 2,
  "permissions": ["storage"],
  "commands": {
    "highlightText": {
      "suggested_key": {
        "default": "Ctrl+H",
        "mac": "Command+H"
      },
      "description": "Highlights selected text"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/messageHandler.js",
        "content/domSelectionOutput.js",
        "content/domSelectionParser.js"
      ]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Playground"
  }
}
